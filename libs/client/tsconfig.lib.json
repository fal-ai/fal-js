{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "inlineSources": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node"]
